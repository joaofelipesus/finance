<div id="success-message">
  <% if message.present? %>
    <p class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative animate-fade-out">
      <%= message %>
    </p>
    <style>
      @keyframes fadeOut {
      from { opacity: 1; }
      to { opacity: 0; }
      }
      .animate-fade-out {
      animation: fadeOut 2s forwards;
      }
    </style>
  <% end %>
</div>
