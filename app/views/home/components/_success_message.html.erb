<div id="success-message">
  <% if message.present? %>
    <div class="fixed top-4 right-4 z-50">
      <p class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative animate-fade-out">
      <%= message %>
      </p>
    </div>

    <style>
      @keyframes fadeOut {
      0% { opacity: 1; }
      90% { opacity: 1; }
      100% { opacity: 0; }
      }
      .animate-fade-out {
      animation: fadeOut 3s forwards;
      }
    </style>
  <% end %>
</div>
