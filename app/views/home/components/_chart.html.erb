<div id="chart" class="bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-4">
    Operations grouped by kind
  </h2>

  <%=
    pie_chart Operation.group(:kind).sum(:value),
    library: { backgroundColor: "#ffffff" },
    colors: Operation.group(:kind).sum(:value).map { |group| Operation::KIND_COLORS[group[0]] }
  %>
</div>
